generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String?
  username  String
  password  String
  img       String?
  role      Role

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Log       Log[]
}

model Log {
  id        String   @id @default(uuid())
  action    String
  createdAt DateTime @default(now())

  userId String
  user   User?  @relation(fields: [userId], references: [id])
}

model Product {
  id            String   @id @default(uuid())
  name          String
  barcode       String
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String
  compatibility String[]
  images        String[]
  brand         String
  location      String
  variant       String
  stock         Int
  sellprice     Float
  buyprice      Float
  isDeleted     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  Product     Product[]
}

enum Role {
  admin
  vendor
  user
}
